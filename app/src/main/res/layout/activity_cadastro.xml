<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/teste"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_nome"
                android:hint="Nome"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:digits="abcdefghijklmnopqrstuvxwyzçABCDEFGHIJKLMNOPQRSTUVXWYZÇ´~^"/>

            <EditText
                android:id="@+id/edt_sobrenome"
                android:hint="Sobrenome"
                android:inputType="text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:digits="abcdefghijklmnopqrstuvxwyzçABCDEFGHIJKLMNOPQRSTUVXWYZÇ ´~^"/>

        </TableRow>
    </TableLayout>



    <EditText
        android:id="@+id/edt_email"
        android:hint="Email"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edt_telefone"
        android:hint="Telefone - DDD + Número"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:digits="1234567890"/>

    <EditText
        android:id="@+id/edt_senha"
        android:hint="Senha - Entre 6 e 12 caracteres"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLength="12"/>

    <EditText
        android:id="@+id/edt_confirmar"
        android:hint="Confirmar Senha"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLength="12"/>

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>