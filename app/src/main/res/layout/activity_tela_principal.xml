<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/teste"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Ultima Senha:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ultimaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-----"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="66sp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Guichê"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ultimoGuiche"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultimas Senhas:"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/senha3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-----"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/senha2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-----"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/senha1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-----"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginRight="25dp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Guichê"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/guiche3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Guichê"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/guiche2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"
                android:layout_marginRight="25dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Guichê"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/guiche1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"
                android:layout_marginRight="25dp"/>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/solicitarSenha"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Solicitar Atendimento"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/suaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não está aguardando atendimento."
        android:textAppearance="@android:style/TextAppearance.Large"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/pessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Large"
        android:gravity="center"
        android:layout_marginTop="20dp"/>


</LinearLayout>